# Set up per-version Java aliases on OS X
# Swiped from http://developer.apple.com/java/javaleopard.html
if [[ $OSTYPE[1,6] == "darwin" ]]; then
	alias java16=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Commands/java
	alias java15=/System/Library/Frameworks/JavaVM.framework/Versions/1.5/Commands/java
	alias java14=/System/Library/Frameworks/JavaVM.framework/Versions/1.4/Commands/java
	alias jruby16="JAVA_HOME='/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home' jruby"
	alias jirb16="JAVA_HOME='/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home' jirb"
fi
