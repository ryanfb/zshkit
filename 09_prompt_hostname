function prompt-hostname () {
  if [[ -z $PROMPT_HOSTNAME ]]; then
    case "$HOST" in
      'telamon.local')
        PROMPT_HOSTNAME="Τελαμών"
      ;;
      'paris.local')
        PROMPT_HOSTNAME="Πάρις"
      ;;
      'astyanax.local')
        PROMPT_HOSTNAME="Ἀστυάναξ"
      ;;
      *)
        PROMPT_HOSTNAME="%m"
      ;;
    esac
  fi
  echo "$PROMPT_HOSTNAME"
}

export PROMPT_HOSTNAME=`prompt-hostname`
