function prompt-hostname () {
  if [[ -z $PROMPT_HOSTNAME ]]; then
    case "$HOST" in
      'telamon.local')
        export PROMPT_HOSTNAME="Τελαμών"
      ;;
      'paris.local')
        export PROMPT_HOSTNAME="Πάρις"
      ;;
      'astyanax.local')
        export PROMPT_HOSTNAME="Ἀστυάναξ"
      ;;
      'patroklos.local')
        export PROMPT_HOSTNAME="Πάτροκλος"
      ;;
      'briseis.local')
        export PROMPT_HOSTNAME="Βρισηΐς"
      ;;
      *)
        export PROMPT_HOSTNAME="%m"
      ;;
    esac
  fi
}

prompt-hostname
