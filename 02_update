if [[ -x `which git` || -x /usr/local/git/bin/git ]]; then
	mydir=`dirname $0`
	if [[ $mydir = . ]]; then
		mydir=`pwd`
	fi
	
	function zshkit-update () {
		pushd $HOME
		pushd $mydir
		git pull
		setopt dotglob
		cp -r dotfiles/* $HOME/
		unsetopt dotglob
		popd
		source .zshrc
		source .zshenv
		popd
	}
fi
