setopt prompt_subst

# Sets color of hostname based on a single letter
# Change offset and letter if you don't like your regular color
function hostname-color () {
	offset=1
	letter=2
	export HOSTNAME_COLOR=$(( 30 + (`printf '%d' "'$HOST[$letter]"` + $offset) % 7 ))
}

hostname-color
PROMPT='%{$reset_color%}%n@%{$fg[$color[$HOSTNAME_COLOR]]%}${PROMPT_HOSTNAME}%{$reset_color%}:%~`git-prompt`%(!.#.$) '
RPROMPT='%{$reset_color%}[%*]' 
